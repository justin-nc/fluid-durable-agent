{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "func: host start",
            "type": "shell",
            "command": "func",
            "args": [
                "start",
                "--script-root",
                "bin/Debug/net8.0"
            ],
            "problemMatcher": "$func-dotnet-watch",
            "isBackground": true,
            "dependsOn": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/fluid-durable-agent.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/fluid-durable-agent.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish (functions)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/fluid-durable-agent.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--output",
                "${workspaceFolder}/bin/output"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
